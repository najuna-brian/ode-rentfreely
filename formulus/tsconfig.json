{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false
  },
  "exclude": [
    "**/android/**",
    "**/ios/**",
    "**/node_modules/**",
    "**/__tests__/**",
    "**/babel.config.js",
    "**/metro.config.js",
    "**/jest.config.js",
    "**/jest.setup.js",
    "**/__mocks__/**"
  ]
}
